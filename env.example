# Shopify Storefront API
# Get these from: Shopify Admin > Settings > Apps and sales channels > Develop apps
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token

# Resend API (for contact form emails and newsletter)
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key

# Resend Audience ID (for newsletter subscriptions)
# Create an audience in Resend dashboard, then add the ID here
# Get this from: https://resend.com/audiences
RESEND_AUDIENCE_ID=your_audience_id

# Newsletter/Mailing List Provider
# Choose one of the following:

# Mailchimp
# MAILCHIMP_API_KEY=your_api_key
# MAILCHIMP_SERVER_PREFIX=us1
# MAILCHIMP_AUDIENCE_ID=your_audience_id

# ConvertKit
# CONVERTKIT_API_KEY=your_api_key
# CONVERTKIT_FORM_ID=your_form_id

# Analytics (optional)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=ofblood.band

# Admin Password (for tour dates admin panel)
# Set a strong password for the admin panel at /admin/tour
ADMIN_PASSWORD=your-secure-password-here

# Admin Session Secret (for signing secure cookies)
# Generate a long random string, e.g. `openssl rand -base64 32`
ADMIN_SESSION_SECRET=replace-with-random-session-secret

# Site URL (optional, for API routes)
# Set this to your production URL in production
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Printful API (for order fulfillment)
# Get this from: Printful Dashboard > Settings > API
PRINTFUL_API_KEY=your_printful_api_key

# Printful Webhook Secret (for verifying webhook signatures)
# Set this when creating the webhook in Printful Dashboard
PRINTFUL_WEBHOOK_SECRET=your_printful_webhook_secret

# Shopify Webhook Secret (for verifying webhook requests)
# Generate a random secret and add it to Shopify webhook settings
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

